// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id           String      @id @default(uuid())
  name         String
  price        Int
  amount       Int  
  description  String
  created_at   DateTime?   @default(now())
  updated_at   DateTime?   @default(now())

  @@map("products")
}